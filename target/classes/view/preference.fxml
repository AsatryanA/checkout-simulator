<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/10.0.1"
            fx:controller="controller.PreferenceController">
    <VBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Գլխավոր">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen" size="18.0"/>
                </font>
            </Label>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Հաճախորդների քանակը">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <Slider fx:id="prefBusyDegree" minorTickCount="0" prefWidth="150.0" showTickMarks="true"
                    snapToTicks="true"/>
            <Label fx:id="busyDegreeDesc" text="  նորմալ" style="-fx-font-family: 'Arial AMU'" />
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Սուպերմարկետի աշխատանքային ժամերը">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="workingHours"  prefWidth="150.0"/>
            <Label text="Ժամ">
            <padding>
                <Insets right="20.0"/>
            </padding>
            <font>
                <Font name="Sylfaen"/>
            </font>
            <HBox.margin>
                <Insets left="20.0"/>
            </HBox.margin>
            </Label>
        </HBox>

        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Հաճախորդ">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen" size="18.0"/>
                </font>
            </Label>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Մեկ հաճախորդի համար ապրանքների քանակի շրջանակը">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefRangeOfGoodsQuantityPerCustomerFrom" prefWidth="150.0"/>
            <Label text="մինչև">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
            </Label>
            <ChoiceBox fx:id="prefRangeOfGoodsQuantityPerCustomerTo" prefWidth="150.0"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Հաճախորդների տոկոսը, ովքեր չեն կարող սպասել">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefPercentageOfACustomerWhoCantWait" prefWidth="150.0"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Հաճախորդը կհեռանա սպասելուց հետո">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefCustomerWillLeaveAfterWaitingFor" prefWidth="150.0"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Դրամարկղ">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen" size="18.0"/>
                </font>
            </Label>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Դրամարկղերի քանակը">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefQuantityOfCheckouts" prefWidth="150.0"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Էքսպրես դրամարկղերի քանակը">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefQuantityOfExpresswayCheckouts" prefWidth="150.0"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Էքսպրես դրամարկղերի ապրանքների քանակը ավելի քիչ քան">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefExpresswayCheckoutsForProductsLessThan" prefWidth="150.0"/>
        </HBox>
        <HBox>
            <padding>
                <Insets bottom="20.0"/>
            </padding>
            <Label text="Յուրաքանչյուր ապրանքի սկանավորման ժամանակի շրջանակը">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Label>
            <ChoiceBox fx:id="prefRangeOfEachProductScanTimeFrom" prefWidth="150.0"/>
            <Label text="մինչև">
                <padding>
                    <Insets right="20.0"/>
                </padding>
                <font>
                    <Font name="Sylfaen"/>
                </font>
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
            </Label>
            <ChoiceBox fx:id="prefRangeOfEachProductScanTimeTo" prefWidth="150.0"/>
        </HBox>
        <HBox layoutX="30.0" layoutY="464.0">
            <padding>
                <Insets bottom="20.0"/>
            </padding>

            <Region prefWidth="200.0" HBox.hgrow="ALWAYS"/>
            <Button fx:id="applyButton" mnemonicParsing="false" text="կիրառել">
                <font>
                    <Font name="Sylfaen"/>
                </font>
        </Button>
            <Button fx:id="applyAndContinueButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                    text="կիրառել և շարունակել">
                <HBox.margin>
                    <Insets left="20.0"/>
                </HBox.margin>
                <font>
                    <Font name="Sylfaen"/>
                </font>
            </Button>
        </HBox>
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>
</ScrollPane>
